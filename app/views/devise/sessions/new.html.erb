<div class="min-h-screen flex justify-center">
  <div class="max-w-md w-full pt-16 pb-8">
    <%= render "devise/shared/error_messages" %>

    <h2 class="text-center text-3xl font-bold">Sign in to your account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'authentication-card' }) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'field-label mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", tabindex: 1, class: 'field-input' %>
      </div>

      <div class="field">
        <div class="flex justify-between mb-2 font-medium">
          <%= f.label :password, class: 'field-label' %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), tabindex: 3, class: 'link-primary text-sm' %>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", tabindex: 2, class: 'field-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center field">
          <%= f.check_box :remember_me, checked: true, class: 'field-checkbox' %>
          <%= f.label :remember_me, 'Stay signed in for a week', class: 'ml-2 text-sm font-medium select-none cursor-pointer' %>
        </div>
      <% end %>

      <%= f.submit "Continue", class: 'btn-primary' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
